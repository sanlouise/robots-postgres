<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="/styles.css">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:400,700" rel="stylesheet">
    <title>All Robots</title>
  </head>
  <body>

    <div class="header">
      <form class="" action="/search" method="get">
        <input class="search" type="search" name="name" placeholder="Search...">
        <button type="submit">GO</button>
      </form>
    </div>

    <div class="robots">
      <a href="/new">Add a new robot</a>
      {{#robots}}
      <a href="/robot/{{id}}">
        <div class="user">

          <img src="{{avatar}}" />
          <h3>{{name}}</h3>

          {{#job}}
            <p class="grey">{{job}}</p>
          {{/job}}

          {{^job}}
            <p class="red">Available for hire</p>
          {{/job}}
        </div>
      </a>
      {{/robots}}
    </div>
    <script src="/main.js" charset="utf-8"></script>
  </body>
</html>
