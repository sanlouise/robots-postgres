<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="/styles.css">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:400,700" rel="stylesheet">
    <title>Robot Page</title>
  </head>
  <body>
    <div class="userinfo">
      <div class="upper">
        <img src="{{avatar}}" />
        <div class="upper-info">
          <h1>{{name}}</h1>
          <div class="upper-info-row">
            {{#address.city}}
              {{address.city}},
            {{/address.city}}
            {{address.country}} |

            {{#job}}
              {{job}}
            {{/job}}

            {{^job}}
              <span class="red">Available for hire</span>
            {{/job}}
            <br>
            {{email}} |
            {{phone}}
          </div>
        </div>
      </div>

      <div class="bottom">
        <table>
          {{#university}}
            <tr>
              <td class="bold">Education</td>
              <td>{{university}}</td>
            </tr>
          {{/university}}

        </table>
      </div>

      <form class="" action="/robot/{{id}}" method="post">
        <button>Delete This Robot</button>
      </form>

    </div>
  </body>
</html>
